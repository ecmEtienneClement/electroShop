<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/mar"
            android:layout_width="300dp"
            android:layout_height="115dp"
            android:layout_marginTop="25dp"
            android:alpha="1"
            android:background="@drawable/shadow"
            android:elevation="26dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:outlineSpotShadowColor="@color/black"
            >

            <TextView
                android:id="@+id/txtNameProduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCateProduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNameProduit"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtPrixProduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCateProduit"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="-35dp"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="40dp"
            android:elevation="27dp"
            android:orientation="horizontal"
            android:background="@drawable/shadowimg">

            <ImageView
                android:id="@+id/imgProduit"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:elevation="27dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/mar"
            android:layout_alignEnd="@+id/mar"
            android:layout_alignRight="@+id/mar"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="-20dp"
            android:layout_marginRight="-20dp"
            android:background="@drawable/shadowimg"
            android:elevation="27dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView

                android:id="@+id/txtStocProduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>